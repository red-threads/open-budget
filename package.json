{
  "name": "@red-threads/open-budget-api",
  "version": "0.1.0",
  "description": "Open Budget API",
  "homepage": "https://github.com/red-threads/open-budget-api",
  "issues": "https://github.com/red-threads/open-budget-api/issues",
  "main": "src/index.js",
  "engines": {
    "node": "10.x.x",
    "npm": "6.x.x"
  },
  "scripts": {
    "jest": "NODE_ENV=test jest",
    "lint": "standard --fix",
    "test": "run-p lint jest",
    "start": "PORT=3030 node .",
    "dev": "PORT=3030 nodemon --inspect",
    "push-tags": "git push --follow-tags origin master",
    "deploy": "now --public && now alias && now rm @red-threads/open-budget-api -sy",
    "prerelease": "npm run lint",
    "release": "standard-version",
    "postrelease": "run-p push-tags deploy"
  },
  "keywords": [
    "red-threads",
    "openbudget",
    "collective",
    "nonprofit"
  ],
  "author": "Red Threads",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "csv-parse": "^2.5.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "joi": "^13.4.0",
    "joigoose": "^4.0.0",
    "json-api": "^3.0.0-rc.4.0.1",
    "mongoose": "^5.1.4",
    "negotiator": "github:ethanresnick/negotiator#full-parse-access",
    "npm-run-all": "^4.1.3",
    "pluralize": "^7.0.0",
    "rollbar": "^2.4.1",
    "timm": "^1.4.2"
  },
  "devDependencies": {
    "jest": "^23.1.0",
    "nodemon": "^1.17.5",
    "now": "^11.2.4",
    "standard": "^11.0.1",
    "standard-version": "^4.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/red-threads/open-budget-api.git"
  },
  "now": {
    "alias": "open-budget-api",
    "env": {
      "MONGO_USERNAME": "@mongo-username",
      "MONGO_PASSWORD": "@mongo-password",
      "MONGO_SERVER": "@mongo-server",
      "NODE_ENV": "production",
      "ROLLBAR_TOKEN": "@rollbar-token"
    }
  }
}
